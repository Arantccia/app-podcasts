{
  "compilerOptions": {
    "module": "ES2015",
    "target": "ES2015",
    "strict": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noEmit": false,
    "jsx": "react",
    "types": [
      "node",
      "jest",
      "@types/jest",
      "@testing-library/jest-dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "./src",
    "paths": {
      "*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}