{
    "compilerOptions": {
      "target": "es5",                    
      "module": "commonjs",               
      "strict": true,                     
      "esModuleInterop": true,            
      "skipLibCheck": true,              
      "forceConsistentCasingInFileNames": true, 
      "jsx": "react",                     
      "sourceMap": true,                  
      "declaration": true,                
      "outDir": "./dist",                 
      "baseUrl": "./src",                 
      "paths": {
        "*": ["src/*"]                    
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }